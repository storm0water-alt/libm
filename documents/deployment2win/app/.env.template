# ===================================
# 档案管理系统 Web应用环境变量配置
# ===================================

# 应用基本配置
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# ===================================
# 数据库连接配置
# ===================================
# 完整的数据库连接字符串 (包含SSL配置)
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/archive_management?sslmode=require

# 或者分别配置 (如果上面的DATABASE_URL为空，会使用下面的配置组合)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=archive_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SSL_MODE=require

# ===================================
# NextAuth.js 认证配置
# ===================================
# JWT签名密钥 (请使用强随机字符串)
NEXTAUTH_SECRET=your_nextauth_secret_key_minimum_32_characters

# 应用访问URL (生产环境需要修改为实际域名)
NEXTAUTH_URL=http://localhost:3000

# NextAuth提供商配置 (可选)
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# ===================================
# Meilisearch 搜索引擎配置
# ===================================
# Meilisearch服务地址
MEILISEARCH_URL=http://localhost:7700

# Meilisearch主密钥
MEILISEARCH_MASTER_KEY=your_meilisearch_master_key

# ===================================
# 文件存储配置
# ===================================
# PDF档案文件存储路径
ARCHIVE_STORAGE_PATH=./data/pdfs

# 文件上传大小限制 (字节)
MAX_FILE_SIZE=50000000

# 允许的文件类型
ALLOWED_FILE_TYPES=pdf

# ===================================
# Redis 配置 (可选，用于缓存)
# ===================================
# REDIS_URL=redis://localhost:6379

# ===================================
# 日志配置
# ===================================
# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 日志文件路径 (相对于应用目录)
LOG_DIR=./logs

# ===================================
# 安全配置
# ===================================
# CORS 允许的源 (多个用逗号分隔)
CORS_ORIGIN=http://localhost:3000

# 会话超时时间 (秒)
SESSION_TIMEOUT=86400

# ===================================
# 性能配置
# ===================================
# 数据库连接池大小
DATABASE_POOL_SIZE=10

# 搜索结果分页大小
SEARCH_PAGE_SIZE=20

# 最大并行上传数
MAX_CONCURRENT_UPLOADS=3

# ===================================
# 开发/调试配置 (生产环境建议关闭)
# ===================================
# 是否启用API文档
ENABLE_API_DOCS=false

# 是否启用详细错误日志
VERBOSE_ERRORS=false